{
  "name": "RM-Note",
  "private": true,
  "scripts": {
    "start": "meteor run"
  },
  "devDependencies": {
    "babel-eslint": "^6.1.2",
    "eslint": "^3.4.0",
    "eslint-config-airbnb": "^10.0.1",
    "eslint-import-resolver-meteor": "^0.3.3",
    "eslint-plugin-import": "^1.13.0",
    "eslint-plugin-jsx-a11y": "^2.2.0",
    "eslint-plugin-meteor": "4.0.1",
    "eslint-plugin-react": "^6.2.0"
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {
        "browsers": [
          "last 2 versions",
          "ie >= 9",
          "and_chr >= 2.3"
        ]
      }
    }
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaFeatures": {
        "classes": true,
        "jsx": true
      }
    },
    "plugins": [
      "meteor",
      "react"
    ],
    "extends": [
      "airbnb/base",
      "plugin:meteor/guide",
      "plugin:react/recommended"
    ],
    "settings": {
      "import/resolver": "meteor"
    },
    "globals": {
      "server": false,
      "browser": false,
      "Meteor": true
    },
    "rules": {
      "import/no-extraneous-dependencies": 0,
      "import/imports-first": 0,
      "import/no-unresolved": 0,
      "no-nested-ternary": 0,
      "semi": [
        2,
        "never"
      ],
      "semi-spacing": [
        2,
        {
          "before": false,
          "after": true
        }
      ],
      "comma-dangle": [
        2,
        "never"
      ],
      "comma-spacing": [
        2,
        {
          "before": false,
          "after": true
        }
      ],
      "comma-style": [
        2,
        "last"
      ],
      "quotes": [
        2,
        "single",
        {
          "avoidEscape": true,
          "allowTemplateLiterals": true
        }
      ],
      "max-len": [
        2,
        120,
        2,
        {
          "ignoreComments": true
        }
      ],
      "space-before-function-paren": [
        2,
        "always"
      ],
      "no-underscore-dangle": [
        "error",
        {
          "allow": [
            "_id",
            "_ensureIndex",
            "_verifyEmailToken",
            "_resetPasswordToken",
            "_name"
          ]
        }
      ]
    }
  },
  "dependencies": {
    "classnames": "^2.2.5",
    "core-js": "^2.4.0",
    "eslint-config-airbnb": "^12.0.0",
    "eslint-plugin-import": "^1.16.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.4.1",
    "meteor-node-stubs": "~0.2.3",
    "moment": "^2.14.1",
    "moment-round": "^1.0.1",
    "moment-timezone": "^0.5.5",
    "react": "^15.3.1",
    "react-addons-css-transition-group": "^15.3.1",
    "react-addons-pure-render-mixin": "^15.3.1",
    "react-addons-update": "^15.3.1",
    "react-datetime": "^2.5.0",
    "react-dnd": "^2.1.4",
    "react-dnd-html5-backend": "^2.1.2",
    "react-dom": "^15.3.1",
    "react-input-autosize": "^1.1.0",
    "react-linkify": "^0.1.3",
    "react-mounter": "^1.2.0",
    "react-redux": "^4.4.5",
    "react-router": "^2.7.0",
    "react-router-redux": "^4.0.6",
    "react-tag-input": "^4.3.1",
    "react-textarea-autosize": "^4.0.5",
    "react-tooltip": "3.2.1",
    "redux": "^3.5.2",
    "redux-thunk": "^2.1.0",
    "slug": "^0.9.1",
    "throttle-debounce": "^1.0.1",
    "ua-parser-js": "^0.7.10",
    "underscore": "^1.8.3",
    "uniforms": "^1.0.0-rc.31",
    "uniforms-unstyled": "^1.0.0-rc.31"
  }
}
